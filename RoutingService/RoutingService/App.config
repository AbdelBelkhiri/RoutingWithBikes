<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<system.serviceModel>
		<services>
			<service name="RoutingService.RoutingService">
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8734/Design_Time_Addresses/RoutingService/RoutingService" />
					</baseAddresses>
				</host>
				<endpoint name ="RestRouting" address="http://localhost:8734/Design_Time_Addresses/RoutingService/RoutingService" binding="webHttpBinding" contract="RoutingService.IRoutingService" behaviorConfiguration="restBehavior" />
				<endpoint name="SoapRouting" address="http://localhost:8736/Design_Time_Addresses/RoutingService/RoutingService" binding="basicHttpBinding"  contract="RoutingService.IRoutingService"/>
				<endpoint address="http://localhost:8736/Design_Time_Addresses/RoutingService/RoutingService/mex" binding="mexHttpBinding" name="MexEndPnt" contract="IMetadataExchange" />
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior>
					<serviceMetadata httpGetEnabled="True" httpsGetEnabled="True" />
					<serviceDebug includeExceptionDetailInFaults="True" />
				</behavior>
			</serviceBehaviors>
			<endpointBehaviors>
				<behavior name="restBehavior">
					<webHttp/>
				</behavior>
			</endpointBehaviors>
		</behaviors>
	</system.serviceModel>
	<system.webServer>
		<httpProtocol>
			<customHeaders>
				<add name="Access-Control-Allow-Origin" value="*" />
			</customHeaders>
		</httpProtocol>
	</system.webServer>
</configuration>